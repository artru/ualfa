<%= form_for  @category, :url => { :action => "create" }  do |f| %>

  <div class="field">
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </div>

    <div class="field">
        <%= f.hidden_field "table", :value => @catalog %>
    </div>



  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
